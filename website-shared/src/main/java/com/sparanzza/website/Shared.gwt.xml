<?xml version="1.0" encoding="UTF-8"?>
<module rename-to="shared">
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="jsinterop.base.Base"/>
    <inherits name="dagger.Dagger"/>
    <inherits name="io.reactivex.RxJava"/>
    <inherits name="com.intendia.gwt.autorest.AutoRest"/>
    <inherits name="com.intendia.reactivity.Reactivity"/>

    <!-- I18N -->
    <inherits name="com.google.gwt.i18n.I18N"/>

    <extend-property name="locale" values="en,es" /> <!-- 1. full list of supported locales -->
    <set-property-fallback name="locale" value="en" />        <!-- 3. set the fallback locale, in replacement for the default 'default' locale -->
    <set-configuration-property name ="locale.queryparam" value="lang"/>
    <set-configuration-property name ="locale.cookie" value="lang"/>
    <set-configuration-property name ="locale.useragent" value="yes"/>
    <set-property name="locale" value="en,es" />

    <source path="shared"/>
</module>
